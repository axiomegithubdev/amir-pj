{% extends 'base_backoffice.html.twig' %}


{% block title %}Répondre à un visiteur{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-12">
            <h1>Répondre à un visiteur</h1>
        </div>
    </div>

    {% for response in message.visitorEmailResponses %}
        <div class="row mt-2">
            <div class="col-12 bg-warning">
                <p>{{ response.content }}</p>
            </div>
        </div>
    {% endfor %}


    <div class="row">
        <div class="col-12">
            {{ form(form) }}
        </div>
    </div>

{% endblock %}
